{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "./dist", 
      "lib": ["es2020"], 
      "target": "ESNext",        
      "module": "NodeNext",
      "moduleResolution": "NodeNext", 
      "esModuleInterop": true,
      "strict": true,          
      "skipLibCheck": true,    
      "types": [
        "node",
        "negotiator",
        "uuid",
        "async-retry",
        "whatwg-mimetype"]        
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"] 
}